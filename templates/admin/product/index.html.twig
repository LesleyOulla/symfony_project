        <table class="table table-striped">
            <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th></th>
            </tr>
            {% for product in products %}
                <tr>
                    <td class="w-25">
                        <img src="{{ asset('img/' ~ product.image)}}"
                        class="img-fluid" alt="" >
                    </td>
                    <td>
                        {{product.name}}
                    </td>
                    <td>
                        {{product.price}}
                    </td>
                    <td>
                        {{product.quantity}}
                    </td>
                    <td>
                        <a href="{{ url('admin.product.update', {id: product.id}) }}" class="btn btn-warning">
                        Edit
                        </a>
                        <a href="{{url('admin.product.delete', {id: product.id})}}" class="btn btn-danger">
                        Delete
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </table>
    </div>
    </div>

{% endblock %}
